<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Layer 1: Lingkaran Merah Paling Luar -->
    <item>
        <shape android:shape="oval">
            <solid android:color="#D32F2F" />
            <size android:width="64dp" android:height="64dp"/>
        </shape>
    </item>

    <!-- Layer 2: Lingkaran Putih, sedikit lebih kecil -->
    <item android:left="4dp" android:right="4dp" android:top="4dp" android:bottom="4dp">
        <shape android:shape="oval">
            <solid android:color="@android:color/white" />
        </shape>
    </item>

    <!-- Layer 3: Lingkaran Merah di Dalam, lebih kecil lagi -->
    <item android:left="8dp" android:right="8dp" android:top="8dp" android:bottom="8dp">
        <shape android:shape="oval">
            <solid android:color="#D32F2F" />
        </shape>
    </item>

    <!-- Layer 4: Lingkaran Putih di Tengah, sebagai latar belakang ikon -->
    <item android:left="12dp" android:right="12dp" android:top="12dp" android:bottom="12dp">
        <shape android:shape="oval">
            <solid android:color="@android:color/white" />
        </shape>
    </item>

</layer-list>