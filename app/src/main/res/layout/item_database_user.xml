<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="12dp"
    android:paddingBottom="12dp"
    android:background="@color/white">

    <TextView
        android:id="@+id/tvNama"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        tools:text="Aditya\nAhmad\nReinaldy"
        android:textColor="@color/black"
        android:textSize="14sp"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/tvEmail"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <TextView
        android:id="@+id/tvEmail"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:text="nime7fix\n@gmail.\ncom"
        android:textColor="@color/black"
        android:textSize="14sp"
        app:layout_constraintHorizontal_weight="1.2"
        app:layout_constraintStart_toEndOf="@+id/tvNama"
        app:layout_constraintEnd_toStartOf="@+id/tvRiwayat"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <TextView
        android:id="@+id/tvRiwayat"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:text="1 Pelaporan"
        android:textColor="@color/black"
        android:textSize="14sp"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintStart_toEndOf="@+id/tvEmail"
        app:layout_constraintEnd_toStartOf="@+id/btnHapus"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnHapus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:text="hapus"
        android:textSize="10sp"
        android:textColor="@color/white"

        android:minHeight="48dp"
        android:minWidth="48dp"

        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"

        app:cornerRadius="4dp"
        app:backgroundTint="#FF0000"
        app:layout_constraintStart_toEndOf="@+id/tvRiwayat"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#EEEEEE"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@+id/tvNama" />

</androidx.constraintlayout.widget.ConstraintLayout>