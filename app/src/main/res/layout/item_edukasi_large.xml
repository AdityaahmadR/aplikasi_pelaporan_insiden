<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="2dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/edukasi_image_large"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:scaleType="centerCrop"
            android:src="@drawable/placeholder_image" />

        <TextView
            android:id="@+id/edukasi_duration_large"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/edukasi_image_large"
            android:layout_alignBottom="@+id/edukasi_image_large"
            android:layout_margin="8dp"
            android:background="#80000000"
            android:paddingStart="4dp"
            android:paddingEnd="4dp"
            android:text="1:06"
            android:textColor="@android:color/white"
            android:textSize="12sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edukasi_image_large"
            android:orientation="vertical"
            android:padding="8dp">

            <TextView
                android:id="@+id/edukasi_title_large"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Begini Cara Memadamkan Api dari Tabung Gas Yang Menyala secara Mudah da Aman"
                android:textColor="@android:color/black"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/edukasi_details_large"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1,8 rb x ditonton - 10 hari yang lalu"
                android:textSize="12sp" />

        </LinearLayout>

    </RelativeLayout>

</androidx.cardview.widget.CardView>