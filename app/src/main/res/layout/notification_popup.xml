<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="16dp"
    android:background="#E0E0E0"
    android:gravity="center_vertical">

    <ImageView
        android:id="@+id/iv_notification_icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/notikasi_hijau"
        android:layout_marginEnd="16dp"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_notification_timestamp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Baru saja"
            android:textSize="12sp"
            android:layout_marginBottom="4dp"/>

        <TextView
            android:id="@+id/tv_notification_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Selamat bergabung"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/tv_notification_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kami menghargai setiap laporan Anda."/>

    </LinearLayout>

    <Button
        android:id="@+id/lapor_button_notification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lapor"
        android:layout_marginStart="16dp"/>

</LinearLayout>